| {% load i18n %}

| {% if is_detail %}
.theater-nav.ml-auto.mb-3
	| {% if prev_obj_url %}
	a.btn.btn-link.with-icon(href="{{ prev_obj_url }}")
		i.i-chevron-left
		span {% trans 'Previous' %}
	| {% else %}
	a.btn.btn-link.with-icon.disabled(href="#")
		i.i-chevron-left
		span {% trans 'Previous' %}
	| {% endif %}
	| {% if next_obj_url %}
	a.btn.btn-link.with-icon.right(href="{{ next_obj_url }}")
		span {% trans 'Next' %}
		i.i-chevron-right
	| {% else %}
	a.btn.btn-link.with-icon.disabled(href="#")
		span {% trans 'Next' %}
		i.i-chevron-right
	| {% endif %}

| {% else %}
.theater-nav
	| {% if page_obj.has_previous %}
	a.btn.btn-link.with-icon(href="?{{search}}&page={{ page_obj.previous_page_number }}", tabindex='-1')
		i.i-chevron-left
		span {% trans 'Previous' %}
	| {% else %}
	a.btn.btn-link.with-icon.disabled(href="#")
		i.i-chevron-left
		span {% trans 'Previous' %}
	| {% endif %}

	.btn-group.mx-2
		| {% for page_number in page_obj.paginator.page_range %}
		a.btn.btn-link.px-1(
			href="?page={{ page_number }}",
			class="{% if page_number == page_obj.number %}active{% endif %}")
			span {{ page_number }}
		| {% endfor %}

	| {% if page_obj.has_next %}
	a.btn.btn-link.with-icon.right(href="?page={{ page_obj.next_page_number }}")
		span {% trans 'Next' %}
		i.i-chevron-right
	| {% else %}
	a.btn.btn-link.with-icon.disabled(href="#")
		span {% trans 'Next' %}
		i.i-chevron-right
	| {% endif %}
| {% endif %}
