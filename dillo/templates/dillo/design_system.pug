        .col-4
          .btn-toolbar-col
            a(href="#").btn
              span Button
            a(href="#").btn.btn-link
              i.i-check
              span Link: i Outside Span
            a(href="#").btn.btn-primary
              span
                i.i-check
                | Primary: i Inside Span
            a(href="#").btn.btn-secondary
              span Secondary

        .col-4
          .btn-toolbar-col
            a(href="#").btn.btn-sm
              span Small
            a(href="#").btn.btn-sm
              span Small Primary
            a(href="#").btn.btn-sm
              span Small Secondary

      hr

      h2 Buttons Group
      .btn-group
        a(href="#").btn
          span Button
        a(href="#").btn.btn-link
          span Link
        a(href="#").btn.btn-primary
          span Primary
        a(href="#").btn.btn-secondary
          span Secondary

      hr

      h2 Small
      a(href="#").btn.btn-sm
        span Button
