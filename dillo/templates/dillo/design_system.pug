    .col-sm-10
      p Buttons must have their labels inside #[code= '<span>'] elements.
      p Only Label: #[code='<a class="btn btn-primary"><span>Label</span></a>']
      p Label + Icon: #[code='<a class="btn btn-primary"><span><i class="i-check"></i><span>Label</span></span></a>']

      hr

      p
        .btn-toolbar-row
          a.btn(href="#") #[span btn]
          a.btn-link(href="#") #[span btn-link]

      p
        .btn-toolbar-row
          a.btn-primary(href="#") #[span btn-primary]
          a.btn-primary-alt(href="#") #[span btn-primary-alt]

      div
        button
          span Button Element
        .btn
          span Regular Div

      p
        .btn.btn-primary
          span Primary
        .btn.btn-primary-alt
          span Secondary
        .btn.btn-secondary
          span Secondary
        .btn.btn-danger
          span Danger
        .btn.btn-success
          span Success
        .btn.btn-warning
          span Warning

      hr

      h2 Buttons Row
      p
        | Expands full width. Wrap buttons in a #[code btn-toolbar-row]
      .btn-toolbar-row
        a(href="#").btn
          span Button
        a(href="#").btn.btn-primary
          span Primary

        .btn-group
          .btn
            span Grouped Buttons
          .btn
            span
              i.i-check
          .btn
            span
              i.i-check
              span With Span
          .btn.active
            span
              i.i-check
              span With Span + Active

        .btn-group
          .btn.active
            span
              i.i-list
          .btn
            span
              i.i-grid

      hr

      h2 Buttons Column
      p
        | Same as a row, but in a column. Wrap buttons in a #[code btn-toolbar-col]
      .row
        .col-4
          .btn-toolbar-col
            a.btn.active(href="#")
              span
                i.i-user
                span Profile

            a.btn(href="#")
              span
                i.i-shield
                span Change Password

            a.btn(href="#")
              span
                i.i-mail
                span Email

        .col-4
          .btn-toolbar-col.btn-sm
            a(href="#").btn
              span Small
            a(href="#").btn
              span Small Primary
            a(href="#").btn
              span Small Secondary

      hr

      .row
        .col-md-6
          h2 Animated

          p Add the class #[code is-processing] to replace the label with a spinner. Click to toggle.

          .btn-toolbar-row
            a(href="#").btn.is-processing.js-toggle-loading
              span
                i.i-check
            a(href="#").btn.is-processing.js-toggle-loading
              span A loooong label.

            a(href="#").btn.btn-sm.is-processing.js-toggle-loading
              span
                i.i-check
            a(href="#").btn.btn-sm.is-processing.js-toggle-loading
              span A small label.

        .col-md-6
          h2 Small
          p
            | Add the class #[code btn-sm] to the button or to #[code btn-toolbar-row]/#[code btn-toolbar-col]
          .btn-toolbar-row
            a(href="#").btn.btn-sm
              span Button
            a(href="#").btn.btn-sm.btn-primary
              span Primary

  hr

  .row#cards
    .col-sm-2(style="text-align: right")
      a(href="#cards-single")
        h1 Single Card
      small Login or setup screens.

    .col-sm-10
      .row.cards-row(style="min-height: 600px")
        .col(style="margin: auto")
          .card.account.setup
            .card-header
              h1.card-title Setup Your Profile

            .card-body
              p.card-message Choose an avatar that represents you!

              form(
                method="post"
                enctype="multipart/form-data",
                id="generic_form")

                .form-group
                  input.form-control(type="text")

                .card-cta
                  button.btn.btn-primary(type="submit")
                    span
                      span 'Next'
                      i.i-chevron-right


