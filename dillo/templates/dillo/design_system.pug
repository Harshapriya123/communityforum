| {% block javascript_extra %}
script.
  $('a').on('click', function(e){ e.preventDefault(); });

  $('button, .btn, .btn-primary, .btn-link, .btn-primary-alt').on('click', function(e){
    e.preventDefault();
    $(this).toggleClass('active');
  });


  $('.js-toggle-loading').on('click', function(e){
    e.preventDefault();
    $(this).toggleClass('is-processing');
  });
| {% endblock javascript_extra %}

