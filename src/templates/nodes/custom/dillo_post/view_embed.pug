			a.op-avatar(href="{{ url_for('users.users_view', username=node.user.username )}}")
				img(src="{{ node.user.email | gravatar }}")

			.op-details
				a.op-name(href="{{ url_for('users.users_view', username=node.user.username )}}")
					| {{ node.user.full_name }}
